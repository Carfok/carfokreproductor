<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_player_gradient"
    android:fitsSystemWindows="true"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvNowPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPRODUCIENDO"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAlbum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="24dp"
        app:strokeWidth="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/tvNowPlaying"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/ivAlbumArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:background="#222222" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvPlayerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Nombre de la CanciÃ³n"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/cardAlbum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPlayerArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Carfok Music"
        android:textColor="#CCFFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/playerSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        android:splitTrack="false"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerArtist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/playerSeekBar"
        app:layout_constraintStart_toStartOf="@id/playerSeekBar"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:30"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/playerSeekBar"
        app:layout_constraintEnd_toEndOf="@id/playerSeekBar"
        android:layout_marginEnd="12dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/pause_circle_24px"
        app:fabCustomSize="84dp"
        app:maxImageSize="48dp"
        app:tint="@color/md_theme_dark_primaryContainer"
        app:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/playerSeekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/skip_previous_24px"
        app:tint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/btnPlayPause"
        app:layout_constraintBottom_toBottomOf="@id/btnPlayPause"
        app:layout_constraintEnd_toStartOf="@id/btnPlayPause"
        android:layout_marginEnd="24dp" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/skip_next_24px"
        app:tint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/btnPlayPause"
        app:layout_constraintBottom_toBottomOf="@id/btnPlayPause"
        app:layout_constraintStart_toEndOf="@id/btnPlayPause"
        android:layout_marginStart="24dp" />

    <ImageButton
        android:id="@+id/btnShuffle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/shuffle_on_24px"
        app:tint="#88FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:id="@+id/btnRepeat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/repeat_one_24px"
        app:tint="#88FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>